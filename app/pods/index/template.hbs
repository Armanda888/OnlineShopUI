 <!-- Slideshow container -->
<div class="slideshow-container">

  <!-- Full-width images with number and caption text -->
  <div class="mySlides slide-1" style="display:block">
    <div class="numbertext"></div>
    <img src="{{rootURL}}assets/images/slide1.jpg" style="width:100%">
    <div class="text"></div>
  </div>

  <div class="mySlides slide-2">
    <div class="numbertext"></div>
    <img src="{{rootURL}}assets/images/slide2.jpg" style="width:100%">
    <div class="text"></div>
  </div>


  <!-- Next and previous buttons -->
  <a class="prev" onclick={{action 'showSlide' -1}} >&#10094;</a>
  <a class="next" onclick={{action 'showSlide' 1}}>&#10095;</a>
</div>
