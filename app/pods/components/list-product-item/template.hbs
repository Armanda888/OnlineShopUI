
<div class="col-xs-12 col-sm-6 col-md-3" style="margin-top:10px;">
    <div class="col-item">
        <div class="post-img-content">
          <img src="{{product.coverImage}}" alt="" class="image-cover img-responsive">
          <!--
          <span class="post-title">
              <b>Perfumes</b><br>
          </span>-->
          <span class="round-tag">-15%</span>
        </div>
        <div class="info">
            <div class="row">
                 <div class="price col-md-6">
                    <h5> {{product.name}}</h5>

                    <span style="color:#ff0080;font-size: large;">${{product.salePrice}} &nbsp;&nbsp;</span>
                     <span><del>${{product.originPrice}}</del></span>
                 </div>
                 <div class="rating hidden-sm col-md-6">
                     <i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                     </i><i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                     </i><i class="fa fa-star"></i>
                 </div>
            </div>
            <div class="separator clear-left">
               <p class="btn-add">
                 <i class="fa fa-shopping-cart"></i><a href="http://www.jquery2dotnet.com" class="hidden-sm">Add to cart</a></p>
               <p class="btn-details">
               <i class="fa fa-list"></i><a href="http://www.jquery2dotnet.com" class="hidden-sm">More details</a></p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>